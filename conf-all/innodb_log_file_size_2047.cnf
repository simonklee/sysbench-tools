[mysql]

# CLIENT #
port                           = 3306
socket               = /var/run/mysqld/mysqld.sock
default-character-set          = utf8

[mysqld]

# GENERAL #
user                           = mysql
default_storage_engine         = InnoDB
character-set-server           = utf8
collation-server               = utf8_unicode_ci
init-connect                   = 'SET NAMES utf8'
pid-file               = /var/run/mysqld/mysqld.pid
socket               = /var/run/mysqld/mysqld.sock
port                        = 3306
bind-address                = 0.0.0.0

# MyISAM #
key_buffer_size                = 32M
myisam_recover                 = FORCE,BACKUP

# SAFETY #
max_allowed_packet             = 16M
max_connect_errors             = 1000000
sql_mode                       = STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_AUTO_VALUE_ON_ZERO,NO_ENGINE_SUBSTITUTION,NO_ZERO_DATE,NO_ZERO_IN_DATE
sysdate_is_now                 = 1
innodb                         = FORCE
#innodb_strict_mode            = 0

# DATA STORAGE #
basedir                         = /usr
datadir                         = /mnt/vol1/var/lib/mysql
# TODO: figure out how to set create tmpdir
tmpdir                          = /tmp

# BINARY LOGGING #
log_bin               = /mnt/vol1/var/lib/mysql/mysql-bin
expire_logs_days               = 2
sync_binlog                    = 0
binlog_format                  = MIXED

server_id                      = 5

# LOGGING #
log_error                      = /var/log/mysql/mysql-error.log
log_queries_not_using_indexes  = 1
slow_query_log                 = 1
slow_query_log_file            = /var/log/mysql/mysql-slow.log

# CACHES AND LIMITS #
tmp_table_size                 = 32M
max_heap_table_size            = 32M
query_cache_type               = 1
query_cache_size               = 32M
max_connections                = 1000
thread_cache_size              = 100
open_files_limit               = 65535
table_definition_cache         = 4096
table_open_cache               = 65536

# INNODB #
innodb_flush_method            = O_DIRECT
innodb_log_files_in_group      = 2
innodb_log_file_size           = 2048MB
innodb_flush_log_at_trx_commit = 2
innodb_file_per_table          = 1
innodb_buffer_pool_size        = 40GB
innodb_flush_neighbor_pages    = 0
innodb_io_capacity             = 1600
innodb_adaptive_flushing_method = keep_average
innodb_log_block_size          = 4096

# INCLUDE #
!includedir /etc/mysql/conf.d/
